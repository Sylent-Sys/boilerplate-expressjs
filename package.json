{
  "name": "boilerplate-expressjs",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.ts",
  "type": "module",
  "scripts": {
    "start": "node --experimental-vm-modules dist/src/app.js",
    "dev": "nodemon --exec tsx src/app.ts",
    "build": "tsc -b tsconfig.json && tsc-alias",
    "build:watch": "tsc && (concurrently \"tsc -w\" \"tsc-alias -w\")",
    "test:ui": "tsc -b tsconfig.json && tsc-alias && vitest --ui",
    "test:run": "tsc -b tsconfig.json && tsc-alias && vitest run ",
    "release": "tsx src/release.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/supertest": "^2.0.12",
    "@vitest/ui": "^1.6.0",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "tsc-alias": "^1.8.10",
    "tsx": "^3.12.7",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.0.3"
  },
  "dependencies": {
    "@prisma/client": "5.17.0",
    "archiver": "^6.0.1",
    "argon2": "^0.40.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-file-routing": "^3.0.3",
    "jose": "^5.6.3",
    "prisma": "^5.17.0",
    "typescript": "^5.2.2",
    "zod": "^3.23.8"
  }
